    // Wrong argument type
    takes_string(42);           // E200: type mismatch
    takes_two("a", "b");        // E200: type mismatch x2
    
    // === MUTABILITY ERRORS ===
    
    int x = 10;
    x = 20;                     // E300: cannot assign to immutable
    
    // === UNDEFINED VARIABLE ===
    
    int y = undefined_var;      // E205: undefined variable
    
    // === VOID VARIABLE ===
    
    void bad;                   // E210: variable declared as void
    
    return 0;
